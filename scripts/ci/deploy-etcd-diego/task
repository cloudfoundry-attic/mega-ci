#!/bin/bash -exu

ROOT="${PWD}"

function deploy_diego() {
  /opt/rubies/ruby-2.2.4/bin/bosh -t $BOSH_DIRECTOR download manifest etcd-cf-deployment cf.yml

  pushd diego-release > /dev/null
    ./scripts/generate-deployment-manifest \
      -c $ROOT/cf.yml \
      -i $ROOT/etcd-cf-env/stubs/diego/iaas-settings.yml \
      -p $ROOT/etcd-cf-env/stubs/diego/property-overrides.yml \
      -s $ROOT/etcd-cf-env/stubs/diego/diego-sql.yml \
      -n $ROOT/etcd-cf-env/stubs/diego/instance-count-overrides.yml \
      -v $ROOT/etcd-cf-env/stubs/diego/release-versions.yml \
      -g \
      > $ROOT/diego.yml
  popd > /dev/null

  /opt/rubies/ruby-2.2.4/bin/bosh -n \
    -d diego.yml \
    -t ${BOSH_DIRECTOR} \
    deploy
}

function upload_release() {
  local release
  release=${1}
  /opt/rubies/ruby-2.2.4/bin/bosh -t ${BOSH_DIRECTOR} upload release https://bosh.io/d/github.com/${release}
}

function upload_stemcell() {
  pushd "${ROOT}/stemcell" > /dev/null
    /opt/rubies/ruby-2.2.4/bin/bosh -t "${BOSH_DIRECTOR}" upload stemcell stemcell.tgz --skip-if-exists
  popd > /dev/null
}

function main() {
  upload_stemcell

  upload_release "cloudfoundry/cflinuxfs2-rootfs-release"
  upload_release "cloudfoundry/diego-release"
  upload_release "cloudfoundry/garden-runc-release"

  deploy_diego
}

main
