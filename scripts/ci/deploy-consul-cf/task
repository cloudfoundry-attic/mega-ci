#!/bin/bash -exu

generate_deployment_config() {
  local dir="${1}"
  local deployments_dir="${2}"
  local stubs="${@:3}"
  local stubs_array="$(jq -n --arg v "${stubs}" '{ v: $v | split(" ") }' | jq -c .v)"

  cat <<CONFIG
{
  "cf": "integration-latest",
  "consul": "${dir}/consul-release",
  "deployments-dir": "${deployments_dir}",
  "stemcell": "integration-latest",
  "stubs": ${stubs_array}
}
CONFIG
}

preflight_check() {
  set +x
  test -n "${BOSH_DIRECTOR}"
  test -n "${BOSH_USER}"
  test -n "${BOSH_PASSWORD}"
  set -x
}

deploy() {
  bosh \
    -n \
    -t "${1}" \
    -d "${2}" \
    deploy
}

main() {
  preflight_check

  generate_deployment_config \
    "${PWD}" \
    "${PWD}" \
    "${PWD}/consul-cf-env/stubs/director-uuid.yml" \
    "${PWD}/consul-cf-env/stubs/cf/diego.yml" \
    "${PWD}/consul-cf-env/stubs/cf/properties.yml" \
    "${PWD}/consul-cf-env/stubs/cf/stub.yml" \
    > "${PWD}/config.json"

  "${PWD}/cf-deployment/tools/prepare-deployments" \
    "aws" \
    "${PWD}/config.json"

  deploy \
    "${BOSH_DIRECTOR}" \
    "${PWD}/cf.yml"
}

if [ "$(basename "${0}")" = "task" ]; then
  main
fi
